@model NEYMARKET.DTO.ProdutoDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Novo produto</h3>
<hr/>
<form class="form-horizontal" asp-controller="Produtos" asp-action="Salvar" method="POST">
<input type="Hidden" asp-for="Id" value="0">

<label>Nome:</label>
<input type="text" asp-for="Nome" class="form-control" placeholder="Nome da categoria">
<span asp-validation-for="Nome"></span><br>

<label asp-for="CategoriaID" >Categorias:</label>
<select class="form-control" asp-for="CategoriaID" asp-items='@(new SelectList(@ViewBag.Categorias,"Id","Nome"))'></select><br>

<label asp-for="FornecedorID">Fornecedores:</label>
<select class="form-control" asp-for="FornecedorID" asp-items='@(new SelectList(@ViewBag.Fornecedores,"Id","Nome"))'></select><br>

<label>Preço de custo:</label>
<input type="number" step="any" asp-for="PrecoDeCusto" class="form-control" placeholder="R$ 00,00"><br>

<label>Preço de venda:</label>
<input type="number" step="any" asp-for="PrecoDeVenda" class="form-control" placeholder="R$ 00,00"><br>

<label>Medição:</label>
<select class="form-control" asp-for="Medicao">
    <option value="0">Litro</option>
    <option value="1">Kilo</option>
    <option value="2">Unidade</option>
</select><br>

<button class="btn btn-success">Cadastrar</button>
</form>