@model NEYMARKET.DTO.FornecedorDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Novo fornecedor</h3>
<hr/>
<form class="form-horizontal" asp-controller="Fornecedores" asp-action="Salvar" method="POST">
<input type="Hidden" asp-for="Id" value="0">
<label>Nome</label>
<input type="text" asp-for="Nome" class="form-control" placeholder="Nome do fornecedor"><br>
<span asp-validation-for="Nome"></span>
<label asp-for="Email">Email</label>
<input type="text" asp-for="Email" class="form-control" placeholder="Email@dofornecedor.com"><br>
<span asp-validation-for="Email"></span>
<label asp-for="Telefone">Telefone/Celular</label>
<input type="text" asp-for="Telefone" class="form-control" placeholder="(00) 0 0000-0000"><br>
<span asp-validation-for="Telefone"></span><br>
<br><button class="btn btn-success">Cadastrar</button>
</form>