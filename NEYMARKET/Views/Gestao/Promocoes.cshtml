@model IEnumerable<NEYMARKET.Models.Promocao>

@{
    Layout = "_LayoutAdmin";
}

<h2>Promoções</h2>

<hr/>

<script>
    $(document).ready( function () {
    $('#promocoes').DataTable();
} );
</script>

<a asp-action="NovaPromocao" asp-controller="Gestao" class="btn btn-success">Criar nova promoção</a>

<hr/>

<table id="promocoes" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Produto</th>
            <th>Porcentagem</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var promocao in Model){
            <tr>
                <td>@promocao.Id</td>
                <td>@promocao.Nome</td>
                <td>@promocao.Produto.Nome</td>
                <td>@promocao.Porcentagem%</td>
                <td>
                <a class="btn btn-primary">Editar</a>
                
                <form style="display: inline;">
                <input type="Hidden" name="Id" id="id" value="@promocao.Id"> 
                <button class="btn btn-danger">Deletar</button>
                </form>
                </td>
            </tr>
        }
    </tbody>
</table>
